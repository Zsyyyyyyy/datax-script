{
    "job": {
        "content": [
            {
                "reader": {
                    "name": "mysqlreader",
                    "parameter": {
                        "connection": [
                            {
                                "jdbcUrl": [
                                    "jdbc:mysql://$mysqlurl/$database_name?useSSL=false"
                                ],
                                "querySql": [
                                    "select account_id,user_id,user_name,budget,balance,pay_amount,ts from $table_name"
                                ]
                            }
                        ],
                        "username": "$mysqlusername",
                        "password": "$mysqlpassword",
                        "collectionName": "uc_data",
                        "dbName": "launch_platform_data"
                    }
                },
                "writer": {
                    "name": "hdfswriter",
                    "parameter": {
                        "column": [
                            {
                                "name": "account_id",
                                "type": "string"
                            },
                            {
                                "name": "user_id",
                                "type": "string"
                            },
                            {
                                "name": "user_name",
                                "type": "string"
                            },
                            {
                                "name": "budget",
                                "type": "string"
                            },
                            {
                                "name": "balance",
                                "type": "string"
                            },
                            {
                                "name": "pay_amount",
                                "type": "string"
                            },
                            {
                                "name": "ts",
                                "type": "string"
                            }
                        ],
                        "fieldDelimiter": "\u0001",
                        "defaultFS": "hdfs://$hdfsurl",
                        "fileName": "uc_data",
                        "fileType": "parquet",
                        "compress": "snappy",
                        "path": "/cpp_data/mysql/launch_platform_data/uc_data/full/",
                        "writeMode": "nonConflict",
                        "hadoopConfig": {
                            "parquet.compression": "SNAPPY",
                            "hive.exec.compress.output": true,
                            "mapred.output.compression.codec": "org.apache.hadoop.io.compress.SnappyCodec",
                            "dfs.nameservices": "$namespace",
                            "dfs.ha.namenodes.$namespace": "$host01,$host02,$host03",
                            "dfs.namenode.rpc-address.$namespace.$host01": "$host01:8020",
                            "dfs.namenode.rpc-address.$namespace.$host02": "$host02:8020",
                            "dfs.namenode.rpc-address.$namespace.$host03": "$host03:8020",
                            "dfs.client.failover.proxy.provider.$namespace": "org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider"
                        }
                    }
                }
            }
        ],
        "setting": {
            "speed": {
                "channel": 2
            }
        }
    },
    "core": {
        "transport": {
            "channel": {
                "speed": {
                    "record": 20000,
                    "byte": 2097152
                }
            }
        }
    }
}